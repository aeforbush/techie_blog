<div class="card">
  <h3 class="card-header">Sign Up</h3>
  <form id="signup-form" class="card-body">
    <label for="email-signup" class="form-label">Email</label>
    <input type="text" id="email-signup" class="form-input" />

    <label class="form-label" for="password-signup">Password</label>
    <input id="password-signup" type="password" class="form-input" />

    <button type="submit" class="btn">Signup!</button>
    <a class="login-link" href="/login">My Tech Blog</a>
  </form>
</div>



<div class="card">
  <h3 class="card-header">Login</h3>
  <form id="login-form" class="card-body">

    <label class="form-label" for="email-login">Username</label>
    <input id="email-login" type="text" autofocus="true" class="form-input" />

    <label class="form-label" for="password-login">Password</label>
    <input
      id="password-login"
      type="password"
      autofocus="true"
      class="form-input"
    />

    <button type="submit" class="btn">Login</button>
    <a class="login-link" href="/signup">Become a Member</a>
  </form>
</div>

