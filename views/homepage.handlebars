<ol class="post-list">
    {{#each posts as |post|}}
    <li>
        <article class="post">
            <div class="title">
                <a href="{{post.post_url}}" target ="_blank" class="">{{post.title}}</a>
                <span>({{post.post_url}})</span>
            </div>
            <div>
                <a href="/post/{{id}}">{{post.comments.length}} comment(s)</a>
            </div>
            
        </article>
    </li>
    {{/each}}
</ol>